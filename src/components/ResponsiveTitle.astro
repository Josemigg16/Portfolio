---
interface Props {
  class?: string
  type?: 'lg' | 'md' | 'sm'
  color?: 'blue' | 'yellow' | 'red' | 'white' | 'orange'
}

const { class: className, type = 'lg', color = 'blue' }: Props = Astro.props
let sizeString = {
  sm: 'text-xl sm:text-2xl md:text-3xl xl:text-4xl 2xl:text-5xl',
  md: 'text-2xl sm:text-3xl md:text-4xl xl:text-5xl 2xl:text-6xl',
  lg: 'text-5xl sm:text-4xl md:text-6xl xl:text-7xl 2xl:text-8xl'
}
---

<h1 class={`font-bold ${sizeString[type]} ${className}`}>
  <slot />
</h1>
