---
const { class: className, type = 'lg' } = Astro.props
---

{
  type === 'lg' && (
    <h1
      class={`text-2xl font-bold text-blue-300 sm:text-4xl md:text-6xl 2xl:text-8xl ${className}`}
    >
      <slot />
    </h1>
  )
}
{
  type === 'md' && (
    <h2
      class={`font-bold text-blue-300 text-2xl sm:text-3xl md:text-4xl 2xl:text-6xl ${className}`}
    >
      <slot />
    </h2>
  )
}
