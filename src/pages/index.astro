---
import Layout from '../layouts/Layout.astro'
import ArrowIcon from '../components/svg/ArrowIcon.astro'
import { basics } from '../schema/jsonresume.json'
---

<Layout title='Welcome to Astro.'>
  <main class='h-screen overflow-auto'>
    <section class='mx-auto w-10/12 bg-black bg-opacity-85'>
      <article class='relative flex h-[calc(100vh)] items-center pb-40'>
        <div class='animate-float absolute bottom-20 w-full'>
          <ArrowIcon className='mx-auto w-20 rotate-90 opacity-95' />
        </div>
        <section class='items-centerm mt-12 flex w-2/3 flex-col pl-12'>
          <h1 class='mr-auto text-8xl font-bold text-blue-300'>{basics.label}</h1>
          <p class='mt-3 w-[44ch] text-pretty pl-6 indent-10 text-3xl'>{basics.summary}</p>
        </section>
        <section class='w-1/3'>
          <figure class='mx-auto flex w-80'>
            <img
              class='aspect-square rounded-full object-cover object-bottom'
              src={basics.image}
              alt={`${basics.name} image`}
            />
          </figure>
          <h2 class='mt-5 text-center text-4xl font-semibold text-yellow-200'>{basics.name}</h2>
        </section>
      </article>
    </section>
  </main>
</Layout>

<style>
  .animate-float {
    animation: floatAnimation 2s ease-in-out infinite;
  }
  @keyframes floatAnimation {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-12px);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
