---
import Layout from '../layouts/Layout.astro'
import ArrowIcon from '../components/svg/ArrowIcon.astro'
import { basics } from '../schema/jsonresume.json'
---

<Layout title='Welcome to Astro.'>
  <main class='h-screen overflow-auto'>
    <section class='mx-auto w-full bg-black bg-opacity-85 lg:w-10/12'>
      <article
        class='relative flex min-h-[calc(100vh)] flex-col lg:flex-row items-center pb-40 pt-20 lg:px-16 xl:flex-nowrap gap-2'
      >
        <div class='animate-float absolute bottom-10 left-0 w-full xl:bottom-20'>
          <ArrowIcon className='mx-auto w-14 rotate-90 opacity-95 md:w-20' />
        </div>
        <section
          class='items-centerm order-1 mx-auto mt-12 flex w-2/3 max-w-full flex-col lg:items-start items-center xl:min-w-[620px]'
        >
          <h1 class='font-bold text-blue-300 text-2xl sm:text-4xl md:text-6xl 2xl:text-8xl'>
            {basics.label}
          </h1>
          <p
            class='mt-3 max-w-[50ch] text-pretty indent-10 lg:pl-6 lg:text-xl xl:text-xl 2xl:text-2xl'
          >
            {basics.summary}
          </p>
        </section>
        <section class='mx-auto w-1/3 min-w-fit xl:min-w-[380px]'>
          <figure class='order-3 mx-auto flex w-48 xl:w-60 2xl:w-80'>
            <img
              class='aspect-square rounded-full object-cover object-bottom'
              src={basics.image}
              alt={`${basics.name} image`}
            />
          </figure>
          <h2 class='mt-5 text-center text-2xl font-semibold text-yellow-200'>{basics.name}</h2>
        </section>
      </article>
    </section>
  </main>
</Layout>

<style>
  .animate-float {
    animation: floatAnimation 2s ease-in-out infinite;
  }
  @keyframes floatAnimation {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-12px);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
